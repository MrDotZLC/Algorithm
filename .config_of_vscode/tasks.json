{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build current cpp",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (!(Test-Path -Path '${workspaceFolder}\\.build')) { New-Item -ItemType Directory -Path '${workspaceFolder}\\.build' }; g++ -g -I${workspaceFolder}\\Algorithm\\ '${file}' -o '${workspaceFolder}\\.build\\${fileBasenameNoExtension}.exe'"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-I${workspaceFolder}\\Algorithm\\",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/msys64/ucrt64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}